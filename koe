        const unitsContainer = document.getElementById('units-container');
        const copyFeedback = document.getElementById('copy-feedback');
        let feedbackTimeout;

        let synth, reverb;
        let audioContextStarted = false;


        async function startAudioContext() {
            if (Tone && !audioContextStarted && Tone.context.state !== 'running') {
                try {
                    await Tone.start();
                    console.log('AudioContext đã được khởi động bởi người dùng.');
                    audioContextStarted = true;
                } catch (error) {
                    console.error("Lỗi khi khởi động AudioContext:", error);
                    return;
                }
            }
            if (audioContextStarted && Tone && Tone.context.state === 'running') {
                 if (!reverb) {
                    reverb = new Tone.Reverb({
                        decay: 1.5,
                        preDelay: 0.01
                    }).toDestination();
                    reverb.wet.value = 0.3;
                }
                if (!synth) {
                    synth = new Tone.Synth({
                        oscillator: { type: 'sine' },
                        envelope: {
                            attack: 0.005,
                            decay: 0.1,
                            sustain: 0.1,
                            release: 0.2,
                        }
                    }).connect(reverb);
                }
            }
        }

        async function playCopySound() {
            await startAudioContext();
            if (synth && reverb && Tone && Tone.context.state === 'running') {
                try {
                    synth.triggerAttackRelease("G4", "8n");
                } catch (error) {
                    console.error("Lỗi khi phát âm thanh:", error);
                }
            } else {
                console.warn("Synth hoặc Reverb chưa sẵn sàng hoặc AudioContext chưa chạy.");
            }
        }

        function showCopyFeedback() {
            clearTimeout(feedbackTimeout);
            copyFeedback.classList.remove('opacity-0', 'translate-y-3');
            copyFeedback.classList.add('opacity-100', 'translate-y-0');
            feedbackTimeout = setTimeout(() => {
                copyFeedback.classList.remove('opacity-100', 'translate-y-0');
                copyFeedback.classList.add('opacity-0', 'translate-y-3');
            }, 2000);
        }

        async function copyToClipboard(text, buttonElement, listItemElement, isHtmlContent = false) {
            await startAudioContext();

            const originalButtonText = buttonElement.innerHTML;
            const originalButtonClasses = Array.from(buttonElement.classList);

            buttonElement.innerHTML = `
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-check-lg inline-block mr-1" viewBox="0 0 16 16">
                    <path d="M12.736 3.97a.733.733 0 0 1 1.047 0c.286.289.29.756.01 1.05L7.88 12.01a.733.733 0 0 1-1.065.02L3.217 8.384a.757.757 0 0 1 0-1.06.733.733 0 0 1 1.047 0l3.052 3.093 5.4-6.425z"/>
                </svg>
                Đã chép!`;
            buttonElement.classList.remove('bg-indigo-500', 'hover:bg-indigo-600');
            buttonElement.classList.add('bg-green-500', 'cursor-default');
            buttonElement.disabled = true;

            if (listItemElement) {
                listItemElement.classList.add('copied-item-highlight');
            }

            const textToCopy = isHtmlContent ?
                (new DOMParser().parseFromString(text, 'text/html').body.firstChild.src || text) :
                text;

            const textarea = document.createElement('textarea');
            textarea.value = textToCopy;
            document.body.appendChild(textarea);
            textarea.select();
            try {
                document.execCommand('copy');
                showCopyFeedback();
                playCopySound();
            } catch (err) {
                console.error('Không thể sao chép văn bản: ', err);
            }
            document.body.removeChild(textarea);

            setTimeout(() => {
                buttonElement.innerHTML = originalButtonText;
                buttonElement.className = '';
                originalButtonClasses.forEach(cls => buttonElement.classList.add(cls));
                buttonElement.disabled = false;

                if (listItemElement) {
                    listItemElement.classList.remove('copied-item-highlight');
                }
            }, 1500);
        }

        function displayAnswers() {
            if (!unitsContainer) return;
            unitsContainer.innerHTML = '';

            allUnitsData.forEach(unit => {
                const unitWrapper = document.createElement('div');
                unitWrapper.className = 'unit-wrapper';

                const unitTitleElement = document.createElement('h2');
                unitTitleElement.className = 'unit-title';
                unitTitleElement.textContent = unit.unitName;
                unitWrapper.appendChild(unitTitleElement);

                const sectionsContainerForUnit = document.createElement('div');
                sectionsContainerForUnit.className = 'space-y-8';
                unitWrapper.appendChild(sectionsContainerForUnit);


                unit.sections.forEach(section => {
                    const sectionDiv = document.createElement('div');
                    sectionDiv.className = 'section-wrapper bg-white p-6 rounded-xl shadow-lg hover:shadow-xl transition-shadow duration-300';

                    const sectionTitleElem = document.createElement('h3');
                    sectionTitleElem.className = 'text-xl font-semibold text-indigo-700 mb-4 pb-2 border-b border-indigo-100';
                    sectionTitleElem.textContent = section.sectionTitle;
                    sectionDiv.appendChild(sectionTitleElem);

                    const answersList = document.createElement('ul');
                    answersList.className = 'space-y-2';

                    section.answers.forEach(answer => {
                        const listItem = document.createElement('li');
                        listItem.className = 'flex flex-col sm:flex-row justify-between sm:items-center py-2 px-3 hover:bg-indigo-50 rounded-lg transition-colors duration-200';

                        const answerContentDiv = document.createElement('div');
                        answerContentDiv.className = 'flex-grow mb-2 sm:mb-0';

                        const idSpan = document.createElement('span');
                        idSpan.className = 'font-semibold mr-2 text-indigo-500';

                        if (!isNaN(parseFloat(answer.id)) && isFinite(answer.id)) {
                            idSpan.textContent = `${answer.id}.`;
                        } else if (typeof answer.id === 'string' && (answer.id.includes(':') || answer.id.includes("'") || answer.id.toLowerCase().includes('country') || answer.id.toLowerCase().includes('question') || answer.id.toLowerCase().includes('photograph') || answer.id.includes('->') || answer.id.toLowerCase().includes('prediction') || answer.id.toLowerCase().includes('first country') || answer.id.toLowerCase().includes('second country')  )) {
                            idSpan.textContent = `${answer.id} -> `;
                        } else if (typeof answer.id === 'string' && /^[a-zA-Z\s.,()']+$/.test(answer.id.split(" -> ")[0]) && !answer.id.includes(':') ) {
                             idSpan.textContent = `${answer.id} -> `;
                        } else if (typeof answer.id === 'string' && answer.id.length === 1 && isNaN(answer.id) ) {
                            idSpan.textContent = `${answer.id}. `;
                        } else {
                            idSpan.textContent = `${answer.id} -> `;
                        }


                        answerContentDiv.appendChild(idSpan);

                        const textSpan = document.createElement('span');
                        textSpan.className = 'text-gray-700 answer-text';
                        if (answer.isHtml) {
                            textSpan.innerHTML = answer.text;
                        } else {
                            textSpan.textContent = answer.text.trim();
                        }
                        answerContentDiv.appendChild(textSpan);

                        listItem.appendChild(answerContentDiv);

                        const copyButton = document.createElement('button');
                        copyButton.className = 'copy-btn bg-indigo-500 hover:bg-indigo-600 text-white text-xs font-medium py-2 px-4 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-300 transition-all duration-200 ease-in-out self-start sm:self-center';
                        copyButton.innerHTML = answer.isHtml ? 'Chép URL Ảnh' : 'Sao chép';
                        copyButton.addEventListener('click', async (event) => {
                            await copyToClipboard(answer.text, event.currentTarget, listItem, answer.isHtml);
                        });
                        listItem.appendChild(copyButton);

                        answersList.appendChild(listItem);
                    });

                    sectionDiv.appendChild(answersList);
                    sectionsContainerForUnit.appendChild(sectionDiv);
                });
                unitsContainer.appendChild(unitWrapper);
            });
        }

        document.addEventListener('DOMContentLoaded', () => {
            displayAnswers();
            const initialInteractionListener = async () => {
                await startAudioContext();
            };
            document.body.addEventListener('click', initialInteractionListener, { once: true });
            document.body.addEventListener('touchstart', initialInteractionListener, { once: true });
        });
    </script>
</body>
</html>
